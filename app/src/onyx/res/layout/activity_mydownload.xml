<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/appBackgroundColor"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mydownloads_textview"
        android:text=""
        android:layout_below="@id/toolbar"
        android:textSize="@dimen/purchase_text_size"
        android:layout_margin="@dimen/my_download_margin"
        android:padding="@dimen/login_new_user_padding"
        android:textColor="@color/pageTitleColor"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackgroundColor"
        android:padding="@dimen/manage_device_padding"
        android:visibility="gone"
        android:id="@+id/noData"
        android:layout_below="@+id/mydownloads_textview"
       >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noDataTextView"
            android:text=""
            android:textStyle="bold"
            android:singleLine="false"
            android:maxLines="4"
            android:textColor="@color/noInternetColor"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/my_download_textsize"/>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@id/mydownloads_textview"
        android:dividerHeight="@dimen/manage_device_padding"
        android:layout_marginLeft="@dimen/my_download_margin"
        android:layout_marginRight="@dimen/my_download_margin"
        android:layout_gravity="center_horizontal" />
</RelativeLayout>