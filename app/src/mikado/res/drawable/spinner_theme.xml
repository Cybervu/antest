<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/buttonbg"
                android:endColor="@color/buttonbg"
                android:startColor="@color/buttonbg"
                android:type="linear" />



            <corners android:radius="2dp" />



            <padding
                android:left="0dp"
                android:right="0dp" />
        </shape>
    </item>
    <item
        android:width="18dp"
        android:height="18dp"
        android:drawable="@drawable/spinner_arrow"
        android:gravity="right|center"
        android:right="10dp" />


</layer-list>
