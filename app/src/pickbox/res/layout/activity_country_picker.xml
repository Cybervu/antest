<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@android:color/transparent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.7"
                android:gravity="center"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/loginImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:paddingTop="@dimen/login_padding"
                        android:src="@drawable/ic_pickbox_logo" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:background="@color/colorAccent"></View>

                    <TextView
                        android:id="@+id/headingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="YOUR LOCATION"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2">

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:weightSum="10"
                android:orientation="vertical">-->

                <!--<io.blackbox_vision.wheelview.view.WheelView
                    android:id="@+id/loop_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:canLoop="false"
                    app:centerTextColor="@color/white"
                    app:drawItemCount="5"
                    app:initPosition="2"
                    app:lineColor="@color/colorAccent"
                    app:textSize="25sp"
                    app:topBottomTextColor="#ffafafaf"/>-->
                <!--<com.webianks.library.scroll_choice.ScrollChoice
                    android:id="@+id/loop_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:scroll_background_color="@color/colorPrimary"
                    app:scroll_selected_item_background="#000000"
                    app:scroll_item_text_color="#7b7b7b"
                    app:scroll_atmospheric="true"
                    app:scroll_indicator="true"
                    app:scroll_indicator_color="@color/colorAccent"
                    app:scroll_item_align="center"
                    app:scroll_selected_item_text_color="#ffffff"
                    app:scroll_item_text_size="22sp"
                    app:scroll_indicator_size="5dp" />-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                <com.home.vod.activity.WheelView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="12"
                    android:id="@+id/loop_view"/>
               </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/arrow"
                    android:layout_alignParentTop="true"
                    android:id="@+id/upArrow"/>
                <ImageView
                    android:id="@+id/downArrow"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:scaleY="-1"
                    android:layout_alignParentBottom="true"/>

           <!-- </LinearLayout>-->


            </RelativeLayout>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="3.1"
                android:layout_marginTop="15dp"
                android:background="@drawable/pickbox_button_blue"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="NEXT"/>



        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/noInternet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/transparent"
        android:padding="@dimen/main_padding"
        android:visibility="gone">

        <TextView
            android:id="@+id/noInternetTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="4"
            android:singleLine="false"
            android:textColor="@color/noInternetColor"
            android:textSize="@dimen/castnointernet_text"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>