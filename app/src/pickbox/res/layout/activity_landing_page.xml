<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/landing_background"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center">

        <ImageView
            android:id="@+id/loginImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_pickbox_logo" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="67dp"
                android:text="TV shows and movies available in Croatia, Serbia, Slovenia, Bosnia and Herzegovina, Montenegro and Macedonia (HD avaliable)."
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <View
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/colorAccent"
                android:textAlignment="center"></View>
        </RelativeLayout>


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:weightSum="12">

            <LinearLayout
                android:id="@+id/alreadyLoginLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/editPasswordStr"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_weight="4"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/pickbox_button_blue"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="LOGIN"
                    android:textAllCaps="true"
                    android:textColor="@color/buttonTextColor"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/registerButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/alreadyLoginLinearLayout"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/marginright10dp"
                android:layout_weight="3"
                android:background="@drawable/pickbox_button_global"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/registerTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/skipButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/forgotPasswordLayout"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/marginright10dp"
                android:layout_weight="3"
                android:background="@drawable/pickbox_button_global"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/skipTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="No thanks, start browsing"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/newUserLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/editConfirmPasswordStr"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/termsAndCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By signing in, you agree to "
                    android:textColor="@color/login_new_user_text_color"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/termsAndCondition1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions at "
                    android:layout_marginLeft="@dimen/paddingBottom5dp"
                    android:textColor="@color/login_new_user_text_color"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/termsAndCondition2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginLeft="@dimen/paddingBottom5dp"
                    android:text="www.pickbox.tv/tc"
                    android:textColor="@color/login_new_user_text_color"
                    android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>