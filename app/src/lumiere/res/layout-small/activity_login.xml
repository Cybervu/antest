<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/appBackgroundColor"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/appBackgroundColor"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appBackgroundColor"
            android:orientation="vertical"
            android:padding="@dimen/Login_drawing_padding"
            android:paddingLeft="@dimen/videoGenreTextView_padding"
            android:paddingRight="@dimen/videoGenreTextView_padding">

            <ImageView
                android:id="@+id/loginImageView"
                android:layout_width="@dimen/fragmentimgview_width"
                android:layout_height="@dimen/fragmentimgview_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/loginImageViewMarging_top"
                android:background="@drawable/logo"
                android:paddingTop="@dimen/Login_drawing_padding" />

            <EditText
                android:id="@+id/editEmailStr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editNameStr"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/videoStoryTextView_margin"
                android:drawablePadding="@dimen/Login_drawing_padding"
                android:paddingBottom="@dimen/login_padding_bottom"
                android:paddingTop="@dimen/login_padding_bottom"
                android:textColor="@color/editTexColor"

                android:textColorHint="@color/hintTextColor"
                android:textSize="@dimen/email_text_size" />

            <EditText
                android:id="@+id/editPasswordStr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editEmailStr"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/videoStoryTextView_margin"
                android:drawablePadding="@dimen/Login_drawing_padding"
                android:inputType="textPassword"
                android:paddingBottom="@dimen/login_padding_bottom"
                android:paddingTop="@dimen/login_padding_bottom"
                android:textColor="@color/editTexColor"
                android:textColorHint="@color/hintTextColor"
                android:textSize="@dimen/email_text_size"

                />


            <RelativeLayout
                android:id="@+id/alreadyLoginLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editPasswordStr"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/view_margin_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/forgotPasswordTextView"
                    android:layout_width="@dimen/okbtn_width"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="4"
                    android:textColor="@color/forgotPasswordTextColor"
                    android:textSize="@dimen/email_text_size" />

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="@dimen/okbtn_width"
                    android:layout_height="@dimen/okbtn_height"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_radious"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:textAllCaps="false"
                    android:textColor="@color/buttonTextColor"
                    android:textSize="@dimen/email_text_size" />

            </RelativeLayout>

            <Button
                android:id="@+id/loginWithFacebookButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/okbtn_height"
                android:layout_below="@+id/alreadyLoginLinearLayout"
                android:layout_marginTop="@dimen/view_margin_top"
                android:background="@drawable/button_radious"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/buttonTextColor"
                android:textSize="@dimen/review_text_size"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/newUserLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editConfirmPasswordStr"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ppv_margin"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/login_new_user_padding">

                <TextView
                    android:id="@+id/loginNewUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/name_user_margin_bottom"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="new user "
                    android:textColor="@color/loginNewUserTextColor"
                    android:textSize="@dimen/login_newuser_size" />

                <TextView
                    android:id="@+id/signUpTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/loginNewUser"
                    android:clickable="true"
                    android:gravity="center"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="sign up"
                    android:textColor="@color/signUpTextColor"
                    android:textSize="@dimen/signup_textsize"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>