<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:focusable="false">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp"

        >

        <RelativeLayout
            android:layout_width="@dimen/videogrid_width"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movieImageView"
                android:layout_width="@dimen/videogrid_width"
                android:layout_height="@dimen/videogrid_height"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/movieImageOverlay"
                android:layout_width="@dimen/videogrid_width"
                android:layout_height="@dimen/videogrid_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:background="@drawable/content_list_vertical_overlay"

                />

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/movieImageOverlay"
                android:layout_alignBottom="@+id/movieImageOverlay"
                android:layout_alignLeft="@+id/movieImageView"
                android:layout_alignRight="@+id/movieImageView"

                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:padding="@dimen/loginImageViewMarging_top_padding"
                android:text=""
                android:background="@color/button_background"
                android:textColor="@color/contentTitleColor"
                android:textSize="@dimen/itemtitle1_text_size"
                android:textStyle="normal" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/close_album_art"
        android:layout_width="@dimen/close_album_img_width"
        android:layout_height="@dimen/close_album_img_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/close"
        android:visibility="gone" />
</RelativeLayout>