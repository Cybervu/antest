<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"

    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <include
        android:id="@+id/logo_image"
        layout="@layout/logo_image"
        />

    <RelativeLayout
        android:id="@+id/categoryTitleRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:padding="@dimen/marginleft10dp">

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/sideTitle_line_width"
            android:layout_height="@dimen/sideTitle_line_height"
            android:layout_alignBottom="@+id/sectionTitle"
            android:layout_alignTop="@+id/sectionTitle"
            android:layout_marginLeft="@dimen/sideTitle_line_marginleft"

            android:background="@color/colorPrimary"
            android:paddingLeft="@dimen/marginleft10dp" />





        <TextView
            android:id="@+id/sectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_toRightOf="@+id/view1"
            android:padding="@dimen/payment_spinner_padding"
            android:textColor="@color/pageTitleColor"
            android:textSize="@dimen/itemtitle_text_size"
            android:textStyle="normal" />

    </RelativeLayout>




    <GridView
        android:id="@+id/imagesGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryTitleRelativeLayout"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/pre_order_button_margin"
        android:layout_marginLeft="@dimen/pre_order_button_margin"
        android:layout_marginRight="@dimen/pre_order_button_margin"
        android:layout_marginTop="@dimen/pre_order_button_margin"
        android:horizontalSpacing="@dimen/pre_order_button_margin"
        android:verticalSpacing="@dimen/pre_order_button_margin"

        />
    <!--<com.twotoasters.jazzylistview.JazzyGridView
        android:id="@+id/imagesGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:numColumns="2"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        app:only_animate_new_items="false" />
-->
    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ProgressBar
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_rawable"
            android:indeterminateDuration="1000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noInternet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/appBackgroundColor"
        android:padding="@dimen/main_padding"
        android:visibility="gone">

        <TextView
            android:id="@+id/noInternetTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="4"
            android:singleLine="false"
            android:textColor="@color/noInternetColor"
            android:textSize="@dimen/itemtitle_text_size"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/appBackgroundColor"
        android:padding="@dimen/main_padding"
        android:visibility="gone">

        <TextView
            android:id="@+id/noDataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="4"
            android:singleLine="false"
            android:textColor="@color/noInternetColor"
            android:textSize="@dimen/testview_text_size"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>
