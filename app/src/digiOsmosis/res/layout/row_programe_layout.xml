<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listViewLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:orientation="horizontal"

    android:focusable="false">

    <android.support.v7.widget.CardView
        android:id="@+id/image_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="15dp"
        app:cardElevation="9dp"
        app:cardMaxElevation="10dp"
        android:layout_marginRight="@dimen/row_gap"
        android:layout_marginTop="@dimen/row_gap"
        >

        <RelativeLayout
            android:layout_width="@dimen/videogrid_width"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movieImageView"
                android:layout_width="@dimen/videogrid_width"
                android:layout_height="@dimen/videogrid_height"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                 />



        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="15dp"
        app:cardElevation="9dp"
        app:cardMaxElevation="10dp"
        android:layout_marginTop="@dimen/row_gap"

        >

        <RelativeLayout
            android:layout_width="@dimen/videogrid_width"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/titleRelativeLayout"
            android:background="@color/button_background"
            android:orientation="vertical">



            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="200dp"
                android:layout_height="@dimen/videogrid_height"


                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:maxLines="5"
                android:padding="@dimen/loginImageViewMarging_top_padding"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/contentTitleColor"
                android:textSize="@dimen/itemtitle1_text_size"
                android:textStyle="normal" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>