<?xml version="1.0"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor">



    <RelativeLayout
        android:id="@+id/dietProgressLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dietPlanTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/diet_close_button_width"
            android:gravity="center"
            android:text="DIET PLAN"
            android:textColor="@color/pageTitleColor"
            android:textSize="@dimen/header_text_size"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/dietCloseButton"
            android:layout_width="@dimen/diet_close_button_width"
            android:layout_height="@dimen/diet_close_button_width"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/diet_close_icon" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/large_progress_bar"
        android:indeterminateDuration="1000"
        android:visibility="gone" />

    <WebView
        android:id="@+id/dietPlanWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dowloadLayout"
        android:layout_below="@+id/dietProgressLinearLayout"
        android:layout_marginBottom="@dimen/diet_bottom_padding"
        android:layout_marginTop="@dimen/diet_top_padding"
        android:background="@color/appBackgroundColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/download_button_padding"
        android:id="@+id/dowloadLayout"
        android:background="@color/colorPrimary"
        >
        <Button
            android:id="@+id/downloadDietPlanButton"
            android:layout_width="@dimen/download_button_width"
            android:layout_height="@dimen/download_button_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/diet_download_button_radious"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/download_button_text_size" />
    </RelativeLayout>


