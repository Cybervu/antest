<?xml version="1.0"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/marginleft10dp"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/season_card_width"
        android:layout_height="@dimen/season_card_height"
        android:layout_gravity="center"

        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="true"
        android:layout_margin="@dimen/episode_card_margin"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="@dimen/card_radius">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/season_layout_card_height"
            android:id="@+id/cardLayout"
            android:gravity="center">

            <ImageView
                android:id="@+id/seasonImageView"
                android:layout_width="@dimen/human_image_width"
                android:layout_height="@dimen/human_image_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/seasonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seasonImageView"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/marginleft10dp"
                android:padding="@dimen/card_title_padding"
                android:layout_marginBottom="@dimen/marginleft10dp"
                android:text="Hello"
                android:textColor="@color/seasonTextColor"
                android:textSize="@dimen/card_title" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    </RelativeLayout>

</LinearLayout>