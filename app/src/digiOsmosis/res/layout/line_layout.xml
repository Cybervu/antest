<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/line_layout"
    android:background="@color/appBackgroundColor"
    android:layout_margin="@dimen/diet_top_padding"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="@dimen/sideTitle_line_height"
            android:layout_height="@dimen/sideTitle_line_width"
            android:id="@+id/colortitle"
            android:background="@color/colorPrimary"

            android:layout_marginLeft="@dimen/marginleft10dp"
            />


        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample title"

            android:textAllCaps="true"
            android:textColor="@color/videotextColor"
            android:textSize="@dimen/itemtitle_text_size"
            android:layout_marginTop="@dimen/marginBottom5dp"
            android:layout_marginLeft="@dimen/marginleft10dp"
            />

    </LinearLayout>





</LinearLayout>



