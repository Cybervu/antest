<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:id="@+id/mainLayout"

    >


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:visibility="gone"/>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:fillViewport="true"
        android:id="@+id/registerScrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/registerParentLayout"
                android:background="@color/transparent"
                android:layout_centerInParent="true"

                android:visibility="visible"
                android:padding="@dimen/Login_drawing_padding">

                <ImageView
                    android:id="@+id/registerImageView"
                    android:layout_width="@dimen/forgot_logo_width"
                    android:layout_height="@dimen/forgot_logo_height"
                    android:background="@drawable/logo"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="@dimen/Login_drawing_padding" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerPage2"
                    android:gravity="center"
                    android:layout_below="@id/registerImageView"

                    android:visibility="visible"
                    >


                    <EditText
                        android:id="@+id/editNameStr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZÇüéâäàåçêëèïîìÄÅÉæÆôöòûùÿÖÜáíóúñÑñÑáéíóúÁÉÍÓÚäëïöüÄËÏÖÜãÃÐðÊËÈıÍÎÏÌÓßÔÒÒõÕµþÞÚÛÙýÝ "
                        android:drawablePadding="@dimen/Login_drawing_padding"
                        android:padding="@dimen/register_edittext_padding"
                        android:drawableLeft="@drawable/name"
                        android:textColor="@color/editTextColor"
                        android:layout_marginTop="@dimen/loginImageViewMarging_top"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/edit_text_size" />

                    <EditText
                        android:id="@+id/editEmailStr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editNameStr"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/login_maring_top"
                        android:drawablePadding="@dimen/Login_drawing_padding"
                       android:drawableLeft="@drawable/email"
                        android:padding="@dimen/register_edittext_padding"
                        android:textColor="@color/editTextColor"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/edit_text_size" />

                    <EditText
                        android:id="@+id/editPasswordStr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editEmailStr"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/login_maring_top"
                        android:drawablePadding="@dimen/Login_drawing_padding"
                        android:hint="password"
                        android:drawableLeft="@drawable/pwd"
                        android:inputType="textPassword"
                        android:padding="@dimen/register_edittext_padding"
                        android:textColor="@color/editTextColor"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/edit_text_size"


                        />

                    <EditText
                        android:id="@+id/editConfirmPasswordStr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editPasswordStr"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/login_maring_top"
                        android:drawablePadding="@dimen/Login_drawing_padding"
                        android:hint="confirm password"
                        android:inputType="textPassword"
                        android:drawableLeft="@drawable/con_pwd"
                        android:padding="@dimen/register_edittext_padding"
                        android:textColor="@color/editTextColor"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/edit_text_size"

                        />

                    <Button
                        android:id="@+id/registerButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/registerbtn_height"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/editConfirmPasswordStr"
                        android:layout_marginTop="@dimen/payment_relative_margin"
                        android:background="@drawable/my_button"
                        android:stateListAnimator="@null"
                        android:textAllCaps="false"
                        android:layout_marginBottom="@dimen/register_margin_bottom"
                        android:textColor="@color/buttonTextColor"
                        android:textSize="@dimen/register_button" />



                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/registerPage1"
                    android:gravity="center"
                    android:layout_below="@id/registerImageView"
                    android:layout_margin="@dimen/loginRelativeLayoutMarging_top"

                    android:visibility="gone">


                    <LinearLayout
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fbbg"
                        android:clickable="true"
                        android:padding="@dimen/login_linear_padding"
                        android:gravity="center_horizontal"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/loginImageViewMarging_top"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/fbIcon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/fb_icon"
                            />

                        <TextView
                            android:id="@+id/fbLoginTextView"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/linear_text_margin"
                            android:gravity="center"
                            android:textColor="@color/fb_text_color"
                            android:textSize="@dimen/fb_text_size"
                            android:layout_marginLeft="@dimen/linear_text_margin"

                            android:text="@string/fb_registration_text"
                            android:layout_weight="0.11" />
                    </LinearLayout>

