<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewLayout"
    android:layout_width="@dimen/season_image_width"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:padding="@dimen/videoCensorRatingTextView_padding"
    android:focusable="false">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/season_image_width"
        android:id="@+id/card_view"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation"

        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="@dimen/season_image_width"
                android:layout_height="@dimen/season_image_height"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/movieImageOverlay"
                android:layout_width="@dimen/season_image_width"
                android:layout_height="@dimen/season_image_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:background="@drawable/content_list_vertical_overlay"

                />


            <ImageView
                android:id="@+id/playButton"
                android:layout_width="@dimen/playbtn_width"
                android:layout_height="@dimen/playbtn_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/play" />

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/itemImage"
                android:layout_alignBottom="@+id/itemImage"
                android:layout_alignLeft="@+id/itemImage"
                android:layout_alignRight="@+id/itemImage"
                android:background="@color/button_background"
                android:ellipsize="end"
                android:padding="@dimen/loginImageViewMarging_top_padding"
                android:gravity="center"
                android:maxLength="18"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/details_Item_Title" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>