<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:padding="@dimen/videoCensorRatingTextView_padding"
    android:focusable="false">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/title"
            android:weightSum="2"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/itemNowTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="true"
                android:ellipsize="end"
                android:padding="@dimen/program_left"
                android:layout_weight="1"
                android:gravity="center"

                android:text=" NOW "
                android:textSize="@dimen/player_title" />


            <TextView
                android:layout_width="2dp"
                android:layout_height="35dp"
                android:id="@+id/middleLineTextView"
               />

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="@dimen/program_left"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:maxLength="18"
                android:textAllCaps="true"
                android:text="START \n PROGRAMME"
                android:textSize="@dimen/player_title" />

        </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title"
        android:id="@+id/belowlineTextView"
        android:layout_marginTop="@dimen/padding25dp"
        android:layout_marginLeft="@dimen/player_title"
        android:layout_marginRight="@dimen/player_title"
        android:padding="@dimen/marginleft10dp"
        android:background="@color/player_next_linecolor"/>
</RelativeLayout>