<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:padding="@dimen/videoCensorRatingTextView_padding"
    android:focusable="false">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/title"
            android:weightSum="2"
            android:orientation="horizontal">

           <!-- <ImageView
                android:id="@+id/itemImage"
                android:layout_width="@dimen/season_image_width"
                android:layout_height="@dimen/season_image_height"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/logo" />




            <ImageView
                android:id="@+id/playButton"
                android:layout_width="@dimen/playbtn_width"
                android:layout_height="@dimen/playbtn_height"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/play" />-->

            <TextView
                android:id="@+id/itemNowTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"

                android:ellipsize="end"
                android:padding="@dimen/loginImageViewMarging_top_padding"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" NOW "
                android:textSize="@dimen/player_title" />


            <TextView
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:id="@+id/middleLineTextView"
               />

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="@dimen/loginImageViewMarging_top_padding"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:maxLength="18"
                android:text="START \n PROGRAMME"
                android:textSize="@dimen/player_title" />

        </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/title"
        android:id="@+id/belowlineTextView"
        android:layout_marginTop="@dimen/padding25dp"
        android:layout_marginLeft="@dimen/player_title"
        android:layout_marginRight="@dimen/player_title"
        android:padding="@dimen/marginleft10dp"
        android:background="@color/player_next_linecolor"/>
</RelativeLayout>