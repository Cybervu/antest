<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackgroundColor"
    android:orientation="vertical"
    android:paddingTop="@dimen/card_padding">

    <RelativeLayout
        android:id="@+id/sliderRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBackgroundColor">


        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/sliderLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listitemlayout_height"
            custom:auto_cycle="true"
            custom:indicator_visibility="visible"
            custom:pager_animation_span="1100" />

        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator2"
            style="@style/AndroidImageSlider_Corner_Oval_Orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
        <!--  <com.daimajia.slider.library.Indicators.PagerIndicator
              android:id="@+id/custom_indicator2"
              style="@style/AndroidImageSlider_Corner_Oval_Orange"
              android:layout_centerHorizontal="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="20dp"
              />
  -->
        <TextView
            android:id="@+id/lineTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_padding"
            android:layout_below="@+id/sliderLayout"
            android:background="@color/border_color" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_itemmarginTop"
        android:paddingLeft="@dimen/login_new_user_padding"
        android:paddingRight="@dimen/login_new_user_padding"
        android:id="@+id/btnMoreLayout"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="@dimen/sideTitle_line_height"
                android:layout_height="@dimen/sideTitle_line_width"
                android:id="@+id/colortitle"
                android:background="@color/colorPrimary"

                android:layout_marginLeft="@dimen/marginleft10dp"
                />


            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample title"

                android:textAllCaps="true"
                android:textColor="@color/videotextColor"
                android:textSize="@dimen/itemtitle_text_size"
                android:layout_marginTop="@dimen/marginBottom5dp"
                android:layout_marginLeft="@dimen/marginleft10dp"
                />

        </LinearLayout>
        <Button
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/view_more_button_background"
            android:minHeight="@dimen/btnMore_min_height"
            android:padding="@dimen/Login_drawing_padding"
            android:stateListAnimator="@null"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/nav_drawer_lineColor"
            android:textSize="@dimen/btnmore_text_size" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/featureContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/ppv_margin"
        android:layout_marginLeft="@dimen/ppv_margin"
        android:orientation="horizontal" />


</LinearLayout>