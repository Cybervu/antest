<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listViewLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/fav_card_padding"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:focusable="false">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/videogrid_width"
        android:layout_height="@dimen/videogrid_height"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardUseCompatPadding = "true"
        app:cardElevation="@dimen/fav_list_card_padding"
        >



        <RelativeLayout
            android:layout_width="@dimen/videogrid_width"
            android:layout_height="@dimen/videogrid_height"
            android:paddingRight="@dimen/card_padding"
            android:id="@+id/favoriteImageRelativeLayout"

            >

            <ImageView
                android:id="@+id/movieImageView"
                android:layout_width="@dimen/videogrid_width"
                android:layout_height="@dimen/videogrid_height"
                android:src="@drawable/logo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />








            <ImageView
                android:id="@+id/close_album_art"
                android:layout_width="@dimen/close_album_img_width"
                android:layout_height="@dimen/close_album_img_height"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/fav_card_padding"
                android:layout_marginRight="@dimen/fav_card_padding"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:src="@drawable/close"
                android:clickable="true"
                android:visibility="gone" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="@dimen/videogrid_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginleft10dp"
        android:textColor="@color/button_background"
        android:textSize="@dimen/fav_title_textsize"
        android:text=""
        android:maxLines="2"
        android:gravity="center"
        android:minLines="1"
        android:layout_below="@+id/card_view"
        />

</RelativeLayout>