<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/bannerImage"
        android:background="@color/appBackgroundColor">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/banerimg_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:id="@+id/bannerImageView"
            android:src="@drawable/stati_banner"
            android:scaleType="centerCrop" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/imageView"
            android:layout_marginBottom="5dp"
            android:background="@color/textColor"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/marginleft10dp"
        android:id="@+id/line_layout"

        >

        <TextView
            android:layout_width="@dimen/sideTitle_line_height"
            android:layout_height="@dimen/sideTitle_line_width"
            android:id="@+id/colortitle"
            android:background="@color/colorPrimary"

            android:layout_marginLeft="@dimen/marginleft10dp"
            />


        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample title"

            android:textAllCaps="true"
            android:textColor="@color/pageTitleColor"
            android:textSize="@dimen/itemtitle_text_size"
            android:layout_marginTop="@dimen/marginBottom5dp"
            android:layout_marginLeft="@dimen/marginleft10dp"
            />

    </LinearLayout>




    <TextView
        android:id="@+id/line_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/line_layout"
        android:layout_alignRight="@+id/line_layout"
        android:layout_below="@+id/line_layout"
        android:layout_marginLeft="@dimen/marginRight20dp"
        android:layout_marginRight="@dimen/marginRight20dp"
        android:background="@color/line_divider_detailsPage"
        android:padding="@dimen/marginRight20dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/large_progress_bar"
        android:indeterminateDuration="1000"
        android:visibility="gone" />

    <WebView
        android:id="@+id/aboutUsWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/diet_top_padding"
        />


</LinearLayout>
