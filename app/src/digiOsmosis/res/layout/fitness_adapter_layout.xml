<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/fav_card_padding"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:focusable="false">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fav_img_height"
            android:paddingRight="@dimen/card_padding"
            android:id="@+id/favoriteImageRelativeLayout"
            android:background="@color/episodeBackgroundColor"

            >

            <ImageView
                android:id="@+id/movieImageView"
                android:layout_width="@dimen/fav_img_width"
                android:layout_height="@dimen/fav_img_height"
                android:src="@drawable/logo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:id="@+id/movieImageOverlay"
                android:layout_width="@dimen/fav_img_width"
                android:layout_height="@dimen/fav_img_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"

                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fav_img_height"
                android:layout_toRightOf="@+id/movieImageView"
                android:paddingLeft="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="start"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/marginleft10dp"
                    android:padding="@dimen/loginImageViewMarging_top_padding"
                    android:text="Padhastana"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movieTitle"
                    android:gravity="start"
                    android:id="@+id/movieStory"
                    android:padding="@dimen/loginImageViewMarging_top_padding"
                    android:text="Story comes here"
                    android:layout_marginBottom="@dimen/marginleft10dp"
                    android:maxLines="@integer/story_lines"
                    android:ellipsize="end"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/pageTitleColor"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </RelativeLayout>
            <ImageView
                android:id="@+id/close_album_art"
                android:layout_width="@dimen/close_album_img_width"
                android:layout_height="@dimen/close_album_img_height"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/fav_card_padding"
                android:layout_marginRight="@dimen/fav_card_padding"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:src="@drawable/close"
                android:clickable="true"
                android:visibility="gone" />

        </RelativeLayout>

</RelativeLayout>