<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ppv_margin"
            android:layout_marginRight="@dimen/ppv_margin"
            android:orientation="vertical">


            <TextView
                android:id="@+id/categoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginBottom="@dimen/categoryTitle_margin"
                android:layout_marginLeft="@dimen/contactUs_Heading"
                android:layout_marginTop="@dimen/contactUs_Heading"

                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:text="CONTACT US"
                android:textColor="@color/pageTitleColor"
                android:textSize="@dimen/sectiontitle_text_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/contactFormTitle"
                android:layout_width="@dimen/fragmenttextview_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/categoryTitle_margin"
                android:layout_marginLeft="@dimen/ppv_margin"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingLeft="@dimen/login_new_user_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:text=""
                android:textColor="@color/contactFormTitle"
                android:textSize="@dimen/vdiotitle1_text_size" />

            <EditText
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contact_name_margin"
                android:layout_marginLeft="@dimen/ppv_margin"
                android:layout_marginRight="@dimen/ppv_margin"
                android:hint=""
                android:drawableLeft="@drawable/contact_name"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:drawablePadding="@dimen/Login_drawing_padding"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/editbox_text_size" />

            <EditText
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contact_name_margin"
                android:layout_marginLeft="@dimen/Login_drawing_padding"
                android:layout_marginRight="@dimen/Login_drawing_padding"
                android:hint=""
                android:drawableLeft="@drawable/contact_mail"
                android:drawablePadding="@dimen/Login_drawing_padding"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/editbox_text_size" />

            <EditText
                android:id="@+id/contact_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/payment_margin_btn_top"
                android:layout_marginLeft="@dimen/ppv_margin"
                android:layout_marginRight="@dimen/ppv_margin"
                android:layout_marginTop="@dimen/review_edit_text_margin"
                android:hint=""
                android:drawablePadding="@dimen/Login_drawing_padding"
                android:drawableLeft="@drawable/contact_msg"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/editbox_text_size" />

            <Button
                android:id="@+id/submit_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ppv_margin"
                android:layout_marginRight="@dimen/ppv_margin"
                android:layout_marginTop="@dimen/payment_margin_btn_top"
                android:background="@drawable/my_button"
                android:text=""
                android:padding="@dimen/loginImageViewMarging_top_padding"
                android:textColor="@color/buttonTextColor"
                android:textSize="@dimen/submitcontact_text_size" />
        </LinearLayout>
    </ScrollView>




</LinearLayout>
