<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/fav_card_padding"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:focusable="false">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardUseCompatPadding = "true"
        app:cardElevation="@dimen/fav_list_card_padding"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fav_img_height"
            android:paddingRight="@dimen/card_padding"
            android:id="@+id/favoriteImageRelativeLayout"

            >

            <ImageView
                android:id="@+id/movieImageView"
                android:layout_width="@dimen/fav_img_width"
                android:layout_height="@dimen/fav_img_height"
                android:src="@drawable/logo"
                android:layout_marginTop="@dimen/marginBottom5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:id="@+id/movieImageOverlay"
                android:layout_width="@dimen/fav_img_width"
                android:layout_height="@dimen/fav_img_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/marginBottom5dp"

                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"

                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fav_img_height"
                android:layout_toRightOf="@+id/movieImageView"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="start"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/marginleft10dp"
                    android:padding="@dimen/loginImageViewMarging_top_padding"
                    android:text="Padhastana"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/pageTitleColor"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movieTitle"
                    android:gravity="start"
                    android:id="@+id/movieStory"
                    android:padding="@dimen/loginImageViewMarging_top_padding"
                    android:text=""
                    android:layout_marginBottom="@dimen/marginleft10dp"
                    android:maxLines="@integer/story_lines"
                    android:ellipsize="end"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/pageTitleColor"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/my_button"
                    android:gravity="center"
                    android:focusable="false"
                    android:padding="@dimen/marginBottom5dp"
                    android:focusableInTouchMode="false"
                    android:text="Play Now"
                    android:textColor="@color/buttonTextColor" />

                <ImageView
                    android:id="@+id/share_click_view"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/play_button"
                    android:src="@drawable/share" />

                <ImageView
                    android:id="@+id/fav_click_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:layout_marginRight="@dimen/marginleft10dp"
                    android:layout_toLeftOf="@+id/share_click_view"
                    android:src="@drawable/favorite" />


        </RelativeLayout>
            <ImageView
                android:id="@+id/close_album_art"
                android:layout_width="@dimen/close_album_img_width"
                android:layout_height="@dimen/close_album_img_height"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/fav_card_padding"
                android:layout_marginRight="@dimen/fav_card_padding"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:src="@drawable/close"
                android:clickable="true"
                android:visibility="gone" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>