    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="10dp"
        android:paddingBottom="80dp"
        android:paddingTop="20dp"
        android:background="@color/colorPrimary"




        />

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:local="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/leftMenuBackground"
        android:minHeight="?attr/actionBarSize"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/logo"
                android:layout_width="@dimen/profile_image_width"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/profile_image_height"
                android:elevation="10dp"
                android:layout_marginBottom="10dp"
                app:border_width="1dp"
                app:border_color="@color/nav_lineColor"
                android:src="@drawable/profile"/>


            <!--<ImageView
                android:layout_width="match_parent"
                android:id="@+id/logo"
                android:layout_height="@dimen/fragmentlogoimg_height"
                android:layout_gravity="center"
                android:src="@drawable/logo" />
-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anuradha Prusty"
                android:id="@+id/edit_name"
                android:layout_below="@+id/logo"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
               android:padding="20dp"
                android:layout_marginTop="20dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_profile"
                android:src="@drawable/pen"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:paddingRight="@dimen/profile_margin_right"

                />

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_1"
        android:weightSum="2"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/notification"
            android:background="@color/sidemenu_notification_Color">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/bell"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Notification"
                android:gravity="center"
                android:textColor="@color/appBackgroundColor"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/logout"
            android:background="@color/sidemenu_logout_color"
           >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/logout"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Logout"
                android:gravity="center"
                android:textColor="@color/appBackgroundColor"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/layout_2"
        android:visibility="gone"
        android:background="@color/sidemenu_notification_Color">


        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/bell"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Notification"
            android:gravity="center"
            android:textColor="@color/appBackgroundColor"/>

    </LinearLayout>

</RelativeLayout>

