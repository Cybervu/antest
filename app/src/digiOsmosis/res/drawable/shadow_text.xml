    <item>
        <shape android:shape="oval">
            <solid android:color="#939393"/>
            <corners android:radius="1dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#939393"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>
