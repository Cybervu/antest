<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:background="@color/colorPrimary">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ppv_margin"
            android:layout_marginRight="@dimen/ppv_margin"
            android:orientation="vertical">


    <!--        <TextView
                android:id="@+id/categoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_marginBottom="@dimen/categoryTitle_margin"
                android:layout_marginLeft="@dimen/loginImageViewMarging_top"
                android:layout_marginTop="@dimen/loginImageViewMarging_top"

                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:text=""
                android:textColor="@color/pageTitleColor"
                android:textSize="@dimen/sectiontitle_text_size"
                android:textStyle="normal" />-->

            <TextView
                android:id="@+id/contactFormTitle"
                android:layout_width="@dimen/fragmenttextview_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/categoryTitle_margin"
                android:layout_marginLeft="@dimen/ppv_margin"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:text=""
                android:layout_below="@+id/toolbar"
                android:textColor="@color/white"
                android:textSize="@dimen/vdiotitle1_text_size" />

            <EditText
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contact_name_margin"
                android:layout_marginLeft="@dimen/ppv_margin"
                android:layout_marginRight="@dimen/ppv_margin"
                android:hint=""
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:paddingLeft="@dimen/Login_drawing_padding"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/textAmgoColor"
                android:background="@drawable/red_border"
                android:textSize="@dimen/editbox_text_size"
                />

            <EditText
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/contact_name_margin"
                android:layout_marginLeft="@dimen/Login_drawing_padding"
                android:layout_marginRight="@dimen/Login_drawing_padding"
                android:hint=""
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:paddingLeft="@dimen/Login_drawing_padding"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/textAmgoColor"
                android:textSize="@dimen/editbox_text_size"
                android:background="@drawable/red_border"/>

            <EditText
                android:id="@+id/contact_msg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/payment_margin_btn_top"
                android:layout_marginLeft="@dimen/ppv_margin"
                android:layout_marginRight="@dimen/ppv_margin"
                android:hint=""
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:paddingBottom="@dimen/Login_drawing_padding"
                android:paddingTop="@dimen/Login_drawing_padding"
                android:paddingLeft="@dimen/Login_drawing_padding"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/textAmgoColor"
                android:textSize="@dimen/editbox_text_size"
                android:gravity="top"
                android:background="@drawable/red_border"/>

            <Button
                android:id="@+id/submit_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/ppv_margin"
                android:layout_marginRight="@dimen/ppv_margin"
                android:layout_marginTop="@dimen/payment_margin_btn_top"
                android:background="@drawable/button_radious"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/submitcontact_text_size" />
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</LinearLayout>
