<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="@dimen/marginleft10dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/logout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Are you sure you want to Log out? "
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/textAmgoColor" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/logout_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAmgoRed"
        android:text="yes"
        android:layout_margin="@dimen/marginRight20dp"
        android:textColor="@color/white"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/logout_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="no"
        android:layout_margin="@dimen/marginRight20dp"
        android:textColor="@color/colorAmgoRed"
        android:layout_weight="1" />
    </LinearLayout>






</LinearLayout>