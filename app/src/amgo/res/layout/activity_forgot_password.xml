<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/transparent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_margin="@dimen/login_maring_top"/>

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="@dimen/forgot_logo_width"
                    android:layout_height="@dimen/forgot_logo_height"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/logo"
                    android:paddingLeft="@dimen/layout_padding_left"
                    android:paddingRight="@dimen/layout_padding_right"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/forgotlayout_margin"
                    android:padding="@dimen/manage_device_padding"
                    android:paddingLeft="@dimen/layout_padding_left"
                    android:paddingRight="@dimen/layout_padding_right">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/email"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:weightSum="2">




                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_radious"
                            android:textAllCaps="false"
                            android:textColor="@color/buttonTextColor"
                            android:textSize="@dimen/submit_text_size" />

                        <TextView
                            android:id="@+id/login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@color/loginTextViewColor"
                            android:textSize="@dimen/login_text_size"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/videoStoryTextView_margin"
                            android:gravity="start" />



                    </LinearLayout>

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/videoStoryTextView_margin"
                        android:drawablePadding="@dimen/Login_drawing_padding"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:padding="10dp"
                        android:paddingTop="@dimen/editEmailStr_padding"
                        android:textColor="@color/editTextColor"
                        android:textColorHint="@color/textAmgoColor"
                        android:textSize="@dimen/email_text_size"
                        android:background="@drawable/red_border"
                        />


                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
