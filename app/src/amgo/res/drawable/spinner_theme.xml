<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/amgo_spinner_back"
                android:endColor="@color/amgo_spinner_back"
                android:startColor="@color/amgo_spinner_back"
                android:type="linear" />

            <stroke
                android:width="1dp"
                android:color="#000000" />

            <corners android:radius="1dp" />

            <padding
                android:left="0dp"
                android:right="0dp" />
        </shape>
    </item>
    <item
        android:width="@dimen/listview_img_width"
        android:height="@dimen/listview_img_height"
        android:drawable="@drawable/spinner_arrow1"
        android:gravity="right|center"
        android:right="10dp" />


</layer-list>
