<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:background="@drawable/grid_color_selector">

    <RelativeLayout
        android:layout_width="@dimen/video280_width"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="4dp">

        <ImageView
            android:layout_width="@dimen/video280_width"
            android:layout_height="@dimen/video280_height"
            android:id="@+id/movieImageView"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/content_list_overlay"
            android:layout_alignParentTop="true"
            />

        <ImageView
            android:id="@+id/movieImageOverlay"
            android:layout_width="@dimen/video280_width"
            android:layout_height="@dimen/video280_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@drawable/content_list_overlay"

            />


        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginBottom="6dp"
            android:textColor="@color/contentTitleColor"
            android:ellipsize="end"
            android:maxLines="1"
            android:focusableInTouchMode="false"
            android:textStyle="normal"
            android:gravity="left"
            android:textSize="@dimen/itemtitle1_text_size"
            android:padding="2dp"
            android:layout_alignLeft="@+id/movieImageView"
            android:layout_alignRight="@+id/movieImageView"
            android:layout_alignBottom="@+id/movieImageOverlay"
            android:layout_alignBaseline="@+id/movieImageOverlay"/>

    </RelativeLayout>

</RelativeLayout>

