<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cast_and_crew"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/castImageView"
                    style="@style/castImageView" />


                <TextView
                    android:id="@+id/castNameTextView"
                    style="@style/castCrewDetailsTextview"
                    android:text="" />

                <TextView
                    android:id="@+id/castDescriptionTextView"
                    style="@style/castCrewDetailsTextview"
                    android:ellipsize="end"
                    android:textSize="@dimen/cast_description_text" />
            </LinearLayout>

            <Button
                android:id="@+id/btnMore"
                style="@style/buttonMore"
                android:stateListAnimator="@null" />

            <View
                android:id="@+id/borderLineView"
                style="@style/borderLineView" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/filmographyRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/compress_expand_margin"
                android:layout_marginTop="@dimen/ppv_margin"
                android:clipToPadding="false"
                android:padding="@dimen/Login_drawing_padding"

                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>


