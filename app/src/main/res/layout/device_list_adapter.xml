<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/Login_drawing_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/device_name"
            style="@style/device_name_textview"
            android:text="vjbrihfofher"/>

        <TextView
            android:id="@+id/os_version"
            style="@style/device_name_textview"
            android:text="vjbrihfofher"
            android:textColor="@color/OsTextColor"
            android:textSize="@dimen/cast_description_text" />
    </LinearLayout>


    <TextView
        android:id="@+id/delete_device"
        style="@style/delete_device_textview"
        android:layout_weight="1.5"
        android:text="Delete"/>


</LinearLayout>