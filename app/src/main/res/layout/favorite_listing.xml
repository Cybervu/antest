<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackgroundColor"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card_view"
        android:layout_height="@dimen/fav_img_height"
        android:padding="@dimen/card_padding"
        app:cardBackground="@color/appBackgroundColor"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fav_img_height"
            >


            <RelativeLayout
                android:layout_width="@dimen/fav_img_width"
                android:layout_height="@dimen/fav_img_height"

                android:id="@+id/favoriteImageRelativeLayout"

                >

                <ImageView
                    android:id="@+id/movieImageView"
                    android:layout_width="@dimen/fav_img_width"
                    android:layout_height="@dimen/fav_img_height"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo" />




            </RelativeLayout>


            <LinearLayout
                android:id="@+id/episodeDetailsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/marginLeft15dp"
                android:layout_marginTop="@dimen/marginLeft15dp"
                android:layout_toRightOf="@+id/favoriteImageRelativeLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ppv_margin"
                    android:textColor="@color/pageTitleColor"
                    android:textSize="@dimen/fav_title_textsize"
                    android:text=""
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/movieDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ppv_margin"
                    android:layout_marginTop="@dimen/marginleft10dp"
                    android:textColor="@color/pageTitleColor"
                    android:maxLines="3"
                    android:text=""
                    android:textSize="@dimen/fav_des_textsize" />

            </LinearLayout>

            <ImageView
                android:id="@+id/close_album_art"
                android:layout_width="@dimen/close_album_img_width"
                android:layout_height="@dimen/close_album_img_height"
                android:adjustViewBounds="true"
                android:src="@drawable/close"
                android:visibility="visible"
                android:layout_marginTop="@dimen/marginLeft15dp"
                android:layout_marginEnd="17dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>