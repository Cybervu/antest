<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subtitle__resolution"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/slidelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/resolution_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/preorderbtn_padding">

                <ImageView
                    style="@style/subtitle_resolution_imageview"
                    android:layout_width="@dimen/subtitle_resolution_width" />

                <TextView
                    android:id="@+id/resolution_text"
                    style="@style/resolution_text"
                    android:text="Quality 360" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/subtitle_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/preorderbtn_padding">

                <ImageView
                    style="@style/subtitle_resolution_imageview"
                    android:src="@drawable/cc_icon" />

                <TextView
                    android:id="@+id/subtitle_text"
                    style="@style/resolution_text"
                    android:text="Sub Title" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
