<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/categoryTitle"
                android:layout_below="@+id/toolbar"
                android:textSize="@dimen/sectiontitle_text_size"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"

                android:paddingBottom="10dp"
                android:layout_marginBottom="29dp"
                android:text=""
                android:textStyle="normal"
                android:layout_marginLeft="15dp"
                android:textColor="@color/pageTitleColor"/>

            <TextView
                android:layout_width="@dimen/fragmenttextview_width"
                android:layout_height="wrap_content"
                android:id="@+id/contactFormTitle"
                android:paddingLeft="5dp"
                android:text=""
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="29dp"
                android:textColor="@color/contactFormTitle"
                android:textSize="@dimen/contactformtitle_text_size" />

            <EditText
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="22dp"
                android:imeOptions="actionDone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/editbox_text_size" />

            <EditText
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="textEmailAddress"
                android:imeOptions="actionDone"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="22dp"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/editbox_text_size" />

            <EditText
                android:id="@+id/contact_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/editTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/editbox_text_size" />

            <Button
                android:id="@+id/submit_cont"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_radious"
                android:text=""
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/submitcontact_text_size"
                android:textColor="@color/buttonTextColor" />
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</LinearLayout>
