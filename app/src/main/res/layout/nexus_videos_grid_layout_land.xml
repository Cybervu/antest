<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewLayout"
    android:layout_width="@dimen/videogrid_land_width"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:focusable="false">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movieImageView"
            style="@style/movieImageView"
            android:layout_width="@dimen/videogrid_land_width"
            android:layout_height="@dimen/videogrid_land_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/content_list_overlay" />

        <ImageView
            android:id="@+id/movieImageOverlay"
            style="@style/movieImageOverlay"
            android:layout_width="@dimen/videogrid_land_width"
            android:layout_height="@dimen/videogrid_land_height" />


        <TextView
            android:id="@+id/movieTitle"
            style="@style/itemTitle_home280_card"
            android:layout_alignBaseline="@+id/movieImageOverlay"
            android:layout_alignBottom="@+id/movieImageOverlay"
            android:layout_alignLeft="@+id/movieImageView"
            android:layout_alignRight="@+id/movieImageView" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/close_album_art"
        style="@style/close_album_art_imageview" />
</RelativeLayout>

