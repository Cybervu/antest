<?xml version="1.0" encoding="UTF-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="7dp"
    app:cardElevation="3dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:elevation="10dp"
       >

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="@dimen/season_image_width"
            android:layout_height="@dimen/season_image_height"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/logo" />
        <ImageView
            android:id="@+id/movieImageOverlay"
            android:layout_width="@dimen/season_image_width"
            android:layout_height="@dimen/season_image_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@drawable/content_list_vertical_overlay"

            />


        <ImageView
            android:id="@+id/playButton"
            android:layout_width="@dimen/playbtn_width"
            android:layout_height="@dimen/playbtn_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/play" />

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/itemImage"
            android:layout_alignBottom="@+id/itemImage"
            android:layout_alignLeft="@+id/itemImage"
            android:layout_alignRight="@+id/itemImage"
            android:background="@color/button_background"
            android:ellipsize="end"
            android:padding="@dimen/loginImageViewMarging_top_padding"
            android:gravity="center"
            android:maxLength="18"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/details_Item_Title" />

    </RelativeLayout>

</android.support.v7.widget.CardView>