<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginleft8dp"
        android:layout_marginRight="@dimen/marginright8dp"
        android:background="@drawable/resume_popup_radious"

        android:orientation="vertical"
        android:padding="@dimen/padding7dp">

        <TextView
            android:id="@+id/resumeTitleTextView"
            style="@style/resumeTitleTextView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:layout_margin="@dimen/recy_margin"
            android:background="@color/nav_lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/marginright8dp"
            android:layout_marginTop="@dimen/margintop8dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yesButton"
                style="@style/resume_playing_button"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/cancelButton"
                style="@style/resume_playing_button2"
                android:stateListAnimator="@null" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
