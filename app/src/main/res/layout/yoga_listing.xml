<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:clickable="false"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/bannerImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banerimg_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"

        android:scaleType="centerCrop" />

    <View
        android:id="@+id/SeparationView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/bannerImageView"
        android:background="@color/colorPrimary" />


    <RelativeLayout
        android:layout_below="@+id/SeparationView"
        android:id="@+id/categoryTitleRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/marginleft10dp">


        <TextView
            android:layout_width="@dimen/sideTitle_line_width"
            android:layout_height="@dimen/sideTitle_line_height"
            android:id="@+id/colortitle"
            android:background="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/marginleft10dp"
            />


        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample title"
            android:textAllCaps="true"
            android:textColor="@color/videotextColor"
            android:textSize="@dimen/itemtitle_text_size"
            android:layout_marginLeft="@dimen/marginRight20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




    </RelativeLayout>

</RelativeLayout>