<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackgroundColor"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/login_linear_margin_top"
            android:paddingTop="@dimen/login_linear_margin_top"

            >


            <RelativeLayout
                android:id="@+id/creditCardLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paymentOptionLinearLayout"
                android:layout_marginTop="@dimen/payment_margin_top"
                android:visibility="visible">


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/Login_drawing_padding">

                    <Button
                        android:id="@+id/scanButton"
                        style="@style/scanButton"
                        android:stateListAnimator="@null"
                        android:text=""
                        android:textAllCaps="false" />

                    <TextView
                        android:id="@+id/chargeDetailsTextView"
                        style="@style/chargeDetailsTextView"
                        android:layout_below="@+id/creditCardDetailsTitleTextView"
                        android:text=""
                        android:textColor="@color/textColor" />

                    <!-- <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/creditCardSaveLayout"
                         android:background="@drawable/spinner_card_bg"
                         android:layout_below="@id/chargeDetailsTextView"
                         android:layout_marginTop="10dp">-->

                    <Spinner
                        android:id="@+id/creditCardSaveEditText"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/chargeDetailsTextView"
                        android:layout_marginTop="@dimen/ppv_margin"
                        android:overlapAnchor="false"
                        android:paddingLeft="@dimen/payment_spinner_padding"
                        android:paddingRight="@dimen/payment_spinner_padding"
                        android:popupBackground="#e1e1e1"
                        android:spinnerMode="dropdown"
                        android:stateListAnimator="@null"
                        android:textColorHint="@color/hint_color"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        android:visibility="visible" />


                    <EditText
                        android:id="@+id/cardNumberEditText"
                        style="@style/cardNumberEditText"
                        android:layout_below="@+id/nameOnCardEditText"
                        android:ems="10"
                        android:hint="Card Number"
                        android:imeOptions="actionNext" />

                    <LinearLayout
                        android:id="@+id/cardExpiryDetailsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardNumberEditText"
                        android:orientation="horizontal">
                        <!-- <RelativeLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/cardexpiryMonthLayout"
                             android:background="@drawable/spinner_card_bg">-->

                        <Spinner
                            android:id="@+id/cardExpiryMonthEditText"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="@dimen/card_expiry_width"
                            android:layout_height="@dimen/card_expiry_height"
                            android:overlapAnchor="false"
                            android:paddingLeft="@dimen/payment_spinner_padding"
                            android:paddingRight="@dimen/payment_spinner_padding"
                            android:popupBackground="#e1e1e1"
                            android:spinnerMode="dropdown"
                            android:textColorHint="@color/hint_color"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />
                        <!--</RelativeLayout>-->


                        <TextView
                            android:id="@+id/yearLineTextView"
                            style="@style/yearLineTextView"
                            android:text=""
                            android:textColor="@color/alreadyHaveALoginButtonTextColor" />
                        <!--<RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cardExpiryYearLayout"
                            android:layout_toRightOf="@+id/yearLineTextView"
                            android:background="@drawable/spinner_card_bg">-->

                        <!-- </RelativeLayout>-->


                        <Spinner
                            android:id="@+id/cardExpiryYearEditText"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="@dimen/card_expiryyear_width"
                            android:layout_height="@dimen/card_expiryyear_height"
                            android:layout_alignTop="@+id/securityCodeEditText"
                            android:layout_toEndOf="@+id/yearLineTextView"
                            android:layout_toRightOf="@+id/yearLineTextView"
                            android:overlapAnchor="false"
                            android:paddingLeft="@dimen/payment_spinner_padding"
                            android:paddingRight="@dimen/payment_spinner_padding"
                            android:popupBackground="#e1e1e1"
                            android:spinnerMode="dropdown"
                            android:textColorHint="@color/hint_color"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />


                        <EditText
                            android:id="@+id/securityCodeEditText"
                            style="@style/securityCodeEditText"
                            android:hint="CVV"
                            android:imeOptions="actionGo" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/saveCardCheckbox"
                        style="@style/saveCardCheckbox"
                        android:layout_below="@+id/cardExpiryDetailsLayout"
                        android:button="@drawable/savecard_style"
                        android:text=""
                        android:textColor="@color/checkboxcolor"
                        android:textSize="@dimen/savecard_text_size"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/payNowButton"
                        style="@style/payNowButton"
                        android:stateListAnimator="@null"
                        android:text=""
                        android:textAllCaps="false" />

                    <EditText
                        android:id="@+id/nameOnCardEditText"
                        style="@style/nameOnCardEditText"
                        android:layout_below="@+id/creditCardSaveEditText"
                        android:ems="10"
                        android:hint="Name on Card"
                        android:imeOptions="actionNext" />

                    <TextView
                        android:id="@+id/creditCardDetailsTitleTextView"
                        style="@style/creditCardDetailsTitleTextView"
                        android:layout_marginTop="@dimen/payment_margin_textview_top"
                        android:layout_toEndOf="@+id/scanButton"
                        android:layout_toRightOf="@+id/scanButton"
                        android:text="" />
                </RelativeLayout>


            </RelativeLayout>

            <!-- <ImageButton
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/payByPalButton"
                 android:src="@drawable/paypal"
                 android:textColor="@color/white"
                 android:textSize="14dp"
                 android:background="@color/transparent"
                 android:layout_below="@+id/creditCardLayout"
                 android:layout_marginTop="12dp"
                 android:visibility="gone"

                 />-->
            <RelativeLayout
                android:id="@+id/withoutPaymentLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/personalDetailsCardView"
                android:layout_marginTop="@dimen/payment_relative_margin"
                android:background="@color/appBackgroundColor"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:id="@+id/withoutPaymentCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/linear_text_margin"
                    app:cardBackgroundColor="@color/appBackgroundColor">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/appBackgroundColor"
                        android:padding="@dimen/Login_drawing_padding">

                        <TextView
                            android:id="@+id/withoutPaymentTitleTextView"
                            style="@style/withoutPaymentTitleTextView"
                            android:text="" />

                        <TextView
                            android:id="@+id/withoutPaymentChargeDetailsTextView"
                            style="@style/withoutPaymentChargeDetailsTextView"
                            android:layout_below="@+id/withoutPaymentTitleTextView"
                            android:text="" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/nextButton"
                    style="@style/nextButton2"
                    android:layout_below="@+id/withoutPaymentCardView"
                    android:stateListAnimator="@null"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/personalDetailsCardView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/Login_drawing_padding"
                android:visibility="visible">


                <TextView
                    android:id="@+id/lineTextView"
                    style="@style/lineTextView2"
                    android:layout_below="@+id/purchaseTextView" />

                <TextView
                    android:id="@+id/showNameWithPrice"
                    style="@style/showNameWithPrice"
                    android:layout_below="@+id/lineTextView" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/showNameWithPrice"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/couponCodeEditText"
                        style="@style/couponCodeEditText"
                        android:layout_below="@+id/showNameWithPrice"
                        android:layout_weight="2"
                        android:ems="10"
                        android:hint="Enter Coupon Code"
                        android:imeOptions="actionGo"
                        android:inputType="text"
                        android:textColor="@color/editTextColor" />

                    <Button
                        android:id="@+id/addCouponButton"
                        style="@style/addCouponButton"
                        android:layout_weight="1"
                        android:stateListAnimator="@null"
                        android:text=""

                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/purchaseTextView"
                    style="@style/purchaseTextView"
                    android:text="" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/paymentOptionLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/personalDetailsCardView"
                android:layout_below="@+id/personalDetailsCardView"
                android:layout_marginTop="@dimen/payment_textview_showname_margin"
                android:orientation="vertical"
                android:padding="@dimen/Login_drawing_padding"
                android:visibility="gone">


                <TextView
                    android:id="@+id/paymentOptionsTitle"
                    style="@style/paymentOptionsTitle"
                    android:text="" />

                <TextView
                    android:id="@+id/paymentOptionLine"
                    style="@style/paymentOptionLine"
                    android:layout_below="@+id/purchaseTextView" />

                <RadioGroup
                    android:id="@+id/paymentOptionsRadioGroup"
                    style="@style/paymentOptionsRadioGroup"
                    android:layout_below="@+id/paymentOptionsTitle">

                    <RadioButton
                        android:id="@+id/payWithCreditCardRadioButton"
                        style="@style/payWithCreditCardRadioButton"
                        android:text="" />

                    <RadioButton
                        android:id="@+id/voucherRadioButton"
                        style="@style/voucherRadioButton"
                        android:text="" />


                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/voucherLinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paymentOptionLinearLayout"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/Login_drawing_padding"
                    android:paddingRight="@dimen/Login_drawing_padding">

                    <EditText
                        android:id="@+id/voucher_code"
                        style="@style/voucher_code_edittext"
                        android:layout_weight="2"
                        android:ems="10"
                        android:hint="Enter Voucher Code"
                        android:imeOptions="actionGo" />

                    <Button
                        android:id="@+id/apply"
                        style="@style/apply_button"
                        android:layout_weight="1"
                        android:stateListAnimator="@null"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/login_new_user_padding"
                    android:paddingLeft="@dimen/Login_drawing_padding"
                    android:paddingRight="@dimen/Login_drawing_padding"
                    android:paddingTop="@dimen/login_new_user_padding">

                    <TextView
                        android:id="@+id/voucher_success"
                        style="@style/voucher_success_textview"
                        android:text="" />

                    <Button
                        android:id="@+id/watch_now"
                        style="@style/watch_now_button"
                        android:stateListAnimator="@null"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
