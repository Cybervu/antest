<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackgroundColor"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/subscriptionDetailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subscriptionTitleTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/plainrow_mrgin_top"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relativeplannamelayout"
                android:layout_width="@dimen/plainrowlayout_width"
                android:layout_height="@dimen/plainrowlayout_height"
                android:background="#1111"
                android:gravity="center">

                <TextView
                    android:id="@+id/planNameTextView"
                    style="@style/planNameTextView"
                    android:text="Quarterly" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lineardetails"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#202020"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/planPurchaseCurrenyTextView"
                    style="@style/planPurchaseCurrenyTextView"
                    android:text="$ " />

                <TextView
                    android:id="@+id/planPurchaseValueTextView"
                    style="@style/planPurchaseValueTextView"
                    android:text="125 " />

                <TextView
                    android:id="@+id/planPurchaseMonthTextView"
                    style="@style/planPurchaseCurrenyTextView"
                    android:paddingTop="@dimen/planPurchaseMonthTextView_padding"
                    android:text="(3 months )"
                    android:textSize="@dimen/itemtitle1_text_size" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/select_planMark"
            style="@style/select_planMark_imageview"
            android:layout_alignLeft="@+id/subscriptionDetailsTextView"
            android:layout_alignStart="@+id/subscriptionDetailsTextView" />
    </RelativeLayout>
</RelativeLayout>