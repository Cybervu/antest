<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/appBackgroundColor"
    android:orientation="horizontal">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/my_download_margin"
        android:layout_marginRight="@dimen/my_download_margin"
        android:layout_marginTop="@dimen/my_download_margin"
        android:layout_weight="1"
        android:background="@color/episodeBackgroundColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            style="@style/offset_imageView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ppv_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                style="@style/offset_textView"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView2"
                style="@style/offset_textView"
                android:text="New Text" />

            <TextView
                android:id="@+id/textView3"
                style="@style/offset_textView"
                android:text="New Text" />

            <TextView
                android:id="@+id/textView4"
                style="@style/offset_textView"
                android:text="New Text" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            style="@style/delete_imageview" />

    </LinearLayout>

</LinearLayout>