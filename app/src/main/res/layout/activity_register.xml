<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackgroundColor"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/activity_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/layout_padding_left"
                android:paddingRight="@dimen/layout_padding_right">

                <RelativeLayout
                    android:id="@+id/loginLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/registerImageView"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:padding="@dimen/registerlayout_padding">


                    <EditText
                        android:id="@+id/editNameStr"
                        style="@style/register_editext" />

                    <EditText
                        android:id="@+id/editEmailStr"
                        style="@style/register_editext2"
                        android:layout_below="@+id/editNameStr" />

                    <EditText
                        android:id="@+id/editPasswordStr"
                        style="@style/register_editext2"
                        android:layout_below="@+id/editEmailStr"
                        android:layout_marginTop="@dimen/login_maring_top"
                        android:inputType="textPassword" />

                    <EditText
                        android:id="@+id/editConfirmPasswordStr"
                        style="@style/register_editext2"
                        android:layout_below="@+id/editPasswordStr"
                        android:layout_marginTop="@dimen/login_maring_top"
                        android:inputType="textPassword" />

                    <Spinner
                        android:id="@+id/languageSpinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editConfirmPasswordStr"
                        android:layout_marginTop="@dimen/login_imageview_linear"
                        android:popupBackground="#ffffff"
                        android:spinnerMode="dropdown"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"

                        />


                    <Spinner
                        android:id="@+id/countrySpinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/languageSpinner"
                        android:layout_marginTop="@dimen/login_imageview_linear"
                        android:popupBackground="#ffffff"
                        android:spinnerMode="dropdown"
                        android:theme="@style/ThemeOverlay.AppCompat.Light" />


                    <LinearLayout
                        android:id="@+id/alreadyLoginLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnLogin"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/alreadyMemberText"
                            style="@style/alreadyMemberText" />

                        <TextView
                            android:id="@+id/alreadyHaveALoginButton"
                            style="@style/alreadyMemberText"
                            android:layout_marginLeft="@dimen/ppv_margin"
                            android:clickable="true"
                            android:textSize="@dimen/already_login_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/registerButton"
                        style="@style/registerButton"
                        android:layout_below="@+id/countrySpinner"
                        android:stateListAnimator="@null" />

                    <LinearLayout
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/registerButton"
                        android:layout_marginTop="@dimen/login_btn_margin_top"
                        android:background="@drawable/fbbg"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="@dimen/payment_spinner_padding">

                        <ImageView
                            android:id="@+id/fbIcon"
                            style="@style/fbIconImageview" />

                        <TextView
                            android:id="@+id/fbLoginTextView"
                            style="@style/fbLoginTextView"
                            android:text="@string/fb_registration_text" />
                    </LinearLayout>

                    <!--    <TextView android:text="Login With Facebook"
                            android:id="@+id/btnLogin"
                            android:padding="16dp"
                            android:layout_below="@+id/alreadyLoginLinearLayout"
                            android:background="#0d101d"
                            android:textColor="#5a6068"
                            android:gravity="center"
                            android:textSize="21dp"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />-->

                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/loginWithFacebookButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/login_facebook_margin"
                        android:layout_marginTop="@dimen/login_facebook_margin"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/registerImageView"
                    style="@style/registerImageView" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
