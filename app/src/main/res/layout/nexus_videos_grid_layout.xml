<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewLayout"
    android:layout_width="@dimen/videogrid_width"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_color_selector"
    android:clickable="false"
    android:focusable="false">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingRight="@dimen/marginBottom5dp">

        <ImageView
            android:id="@+id/movieImageView"
            style="@style/movieImageView" />

        <ImageView
            android:id="@+id/movieImageOverlay"
            style="@style/movieImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/content_list_vertical_overlay"

            />

        <TextView
            android:id="@+id/movieTitle"
            style="@style/itemTitle_home280_card"
            android:layout_width="wrap_content"
            android:layout_alignBaseline="@+id/movieImageOverlay"
            android:layout_alignBottom="@+id/movieImageOverlay"
            android:layout_alignLeft="@+id/movieImageView"
            android:layout_alignRight="@+id/movieImageView"
            android:text="" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/close_album_art"
        style="@style/close_album_art_imageview" />
</RelativeLayout>