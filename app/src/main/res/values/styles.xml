<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@color/hint_color</item>
        <item name="colorControlActivated">@color/hint_background</item>

        <!--
        <item name="windowActionBar">false</item>
-->
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--
        status bar color
-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="MyMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="Widget.CardContent.Header" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>


    <style name="AndroidImageSlider_Corner_Oval_Orange">

        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="shape">oval</item>
        <item name="padding_left">3dp</item>
        <item name="padding_right">3dp</item>
        <item name="padding_top">4dp</item>
        <item name="padding_bottom">4dp</item>

        <item name="selected_color">@color/selected_color</item>
        <item name="unselected_color">@color/unselected_color</item>
        <item name="selected_width">10dp</item>
        <item name="selected_height">10dp</item>
        <item name="unselected_width">6dp</item>
        <item name="unselected_height">6dp</item>

    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/button_background</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/editTextColor</item>
        <!-- Used for the background -->
        <item name="android:background">@color/alertPopupColor</item>
    </style>


    <!--Style for spinner-->
    <style name="spinner_style">
        <item name="android:background">@drawable/selector_spinner</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#d0cece</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="applicationTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>


    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_custom_bar</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>

    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>


    <style name="ad_player_progress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/ad_player_color</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="castCrewTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/ppv_margin</item>
        <item name="android:padding">@dimen/Login_drawing_padding</item>
        <item name="android:textColor">@color/cast_crew_textcolor</item>
        <item name="android:textSize">@dimen/castcrew_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="noInternet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/noInternetColor</item>
        <item name="android:textSize">@dimen/castnointernet_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="castImageView">
        <item name="android:layout_width">@dimen/cast_details_width</item>
        <item name="android:layout_height">@dimen/cast_details_height</item>
        <item name="android:layout_marginTop">@dimen/payment_relative_margin</item>
    </style>

    <style name="castCrewDetailsTextview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/ppv_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/videotextColor</item>
        <item name="android:textSize">@dimen/cast_textsize</item>
    </style>

    <style name="buttonMore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">@dimen/ppv_margin</item>
        <item name="android:background">@drawable/view_more_button_background</item>
        <item name="android:minHeight">@dimen/btnMore_min_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">@dimen/cast_btn_textsize</item>
    </style>

    <style name="borderLineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/border_line_height</item>
        <item name="android:layout_marginTop">@dimen/ppv_margin</item>
        <item name="android:background">@color/border_color</item>
        <item name="android:paddingLeft">@dimen/Login_drawing_padding</item>
        <item name="android:paddingRight">@dimen/Login_drawing_padding</item>
    </style>

    <style name="download_popup_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appBackgroundColor</item>
        <item name="android:textSize">@dimen/review_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="download_popup_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/transparent</item>
    </style>

    <style name="download_popup_button">
        <item name="android:layout_width">@dimen/download_popup_btn_width</item>
        <item name="android:layout_height">@dimen/download_popup_btn_height</item>
        <item name="android:layout_marginRight">@dimen/ppv_margin</item>
        <item name="android:background">@drawable/button_radious</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">@dimen/trailer_btn_text_size</item>
    </style>

    <style name="download_resolution_list_radioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/resolutiontext_height</item>
        <item name="android:button">@drawable/radiobutton_style</item>
        <item name="android:textColor">@color/downloadresolutionTextColor</item>
        <item name="android:textSize">@dimen/login_newuser_size</item>
    </style>

    <style name="filter_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <style name="final_exoplayer_imageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:src">@drawable/center_ic_media_pause</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="final_exoplayer_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#80ffffff</item>
    </style>

    <style name="final_exoplayer_textview2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginBottom">@dimen/payment_margin_textview_top</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/current_time_textsize</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="exoplayer_offLine_subtitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/offline_margin_bottom</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">@dimen/offLine_subtitleText_textsize</item>
    </style>

    <style name="exoplayer_imagebutton_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft15dp</item>
        <item name="android:background">@drawable/ic_back</item>
    </style>

    <style name="exoplayer_subtitle_change_btn">
        <item name="android:layout_width">@dimen/subtitle_change_btn_width</item>
        <item name="android:layout_height">@dimen/subtitle_change_btn_height</item>
        <item name="android:layout_marginRight">@dimen/marginRight20dp</item>
        <item name="android:background">@drawable/cc_button_radious</item>
        <item name="android:src">@drawable/subtitle_image</item>
    </style>

    <style name="exoplayer_seekbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">10</item>
        <item name="android:progressDrawable">@drawable/seekbar</item>
        <item name="android:thumb">@drawable/thumb_drawable</item>
    </style>

    <style name="exoplayer_total_time_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/ppv_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/totaltme_text_size</item>
    </style>

    <style name="exoplayer_compress_expand_imageview">
        <item name="android:layout_width">@dimen/compress_expand_height</item>
        <item name="android:layout_height">@dimen/compress_expand_width</item>
        <item name="android:layout_marginRight">@dimen/marginright5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding15dp</item>
        <item name="android:src">@drawable/ic_media_fullscreen_stretch</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="videoTitle_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginleft10dp</item>
        <item name="android:layout_marginTop">@dimen/margintop8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/videoTitleTextColor</item>
        <item name="android:textSize">@dimen/videotitle_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="downloadImageView">
        <item name="android:layout_width">@dimen/downloadimg_width</item>
        <item name="android:layout_height">@dimen/downloadimg_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/marginRight20dp</item>
        <item name="android:layout_marginTop">@dimen/margintop8dp</item>
        <item name="android:src">@drawable/download_black</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="exoplayer_percentageTextview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/marginright10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/border_color</item>
        <item name="android:textSize">@dimen/percentage_text_size</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="GenreTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">@dimen/marginleft10dp</item>
        <item name="android:layout_marginRight">@dimen/marginright10dp</item>
        <item name="android:layout_marginTop">@dimen/margintop8dp</item>
        <item name="android:textColor">@color/nav_drawer_lineColor</item>
        <item name="android:textSize">@dimen/genre_textsize</item>
    </style>

    <style name="videoDurationTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginleft10dp</item>
        <item name="android:layout_marginTop">@dimen/margintop8dp</item>
        <item name="android:textColor">@color/nav_drawer_lineColor</item>
        <item name="android:textSize">@dimen/genre_textsize</item>
    </style>

    <style name="videoCensorRatingTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginleft10dp</item>
        <item name="android:layout_marginTop">@dimen/margintop8dp</item>
        <item name="android:background">@drawable/button_bg_orange</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">@dimen/padding_right4dp</item>
        <item name="android:textColor">@color/nav_drawer_lineColor</item>
        <item name="android:textSize">@dimen/genre_textsize</item>

    </style>

</resources>
